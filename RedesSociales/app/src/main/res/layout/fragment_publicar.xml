<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cr.ac.itcr.redessociales.PublicarFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <Button
            android:id="@+id/buttonsharevid"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Share Video"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/imageShare"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:textSize="20dp"
            android:layout_marginTop="44dp"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:layout_alignRight="@+id/imageShare"
            android:layout_alignEnd="@+id/imageShare" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Share Link"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/buttonsharevid"
            android:layout_marginTop="44dp"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/imageShare"
            android:layout_width="wrap_content"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:layout_height="70dp"
            android:text="Share Image"
            android:background="@color/colorPrimary"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:id="@+id/profile_pic"
            android:src="@drawable/face"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp" />

    </RelativeLayout>

</FrameLayout>
